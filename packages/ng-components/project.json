{
  "projectType": "library",
  "sourceRoot": "packages/ng-components/src",
  "prefix": "webskills",
  "targets": {
    "build": {
      "executor": "@nrwl/angular:package",
      "outputs": ["dist/packages/ng-components"],
      "options": {
        "project": "packages/ng-components/ng-package.json"
      },
      "configurations": {
        "production": {
          "tsConfig": "packages/ng-components/tsconfig.lib.prod.json"
        },
        "development": {
          "tsConfig": "packages/ng-components/tsconfig.lib.json"
        }
      },
      "defaultConfiguration": "production"
    },
    "test": {
      "executor": "@nrwl/jest:jest",
      "outputs": ["coverage/packages/ng-components"],
      "options": {
        "jestConfig": "packages/ng-components/jest.config.ts",
        "passWithNoTests": true
      }
    },
    "lint": {
      "executor": "@nrwl/linter:eslint",
      "options": {
        "lintFilePatterns": [
          "packages/ng-components/**/*.ts",
          "packages/ng-components/**/*.html"
        ]
      }
    }
  },
  "tags": []
}
