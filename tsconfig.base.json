{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2017", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@webskills/logging": ["packages/logging/src/index.ts"],
      "@webskills/models": ["packages/models/src/index.ts"],
      "@webskills/ng-components": ["packages/ng-components/src/index.ts"],
      "@webskills/ng-utils": ["packages/ng-utils/src/index.ts"],
      "@webskills/ts-utils": ["packages/ts-utils/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
